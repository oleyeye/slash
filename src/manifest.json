{
    "name": "Slash",
    "description": "Switch search result between google, bing, baidu search engine",
    "short description": "Menu to switch between different search engines",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "icons": {
        "16": "/images/lightning16.png",
        "32": "/images/lightning32.png",
        "48": "/images/lightning48.png",
        "128": "/images/lightning128.png"
    },
    "options_page": "options.html"
}